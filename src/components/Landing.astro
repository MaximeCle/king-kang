    padding: var(--space-2-5);
    position: relative;
  }

  .kangaroo-illustration {
    position: absolute;
    top: 0;
    left: 20px;
    transform: translateY(-100%);
    opacity: 0.6;
  }

  .crown-illustration {
    position: absolute;
    top: 15px;
    right: 5px;
    transform: translateY(-70%);
    opacity: 0.6;
  }

  .landing-screen-presentation {
    background: #f9f9f9;
    width: 1222px;
    height: 600px;
    border-radius: var(--border-radius-md);
    background-image: url("/landing-screen.png");
    background-size: contain;
    background-position: center;
    background-repeat: no-repeat;
  }

  .vision-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    grid-template-rows: auto auto;
    gap: var(--space-1);
  }

  .vision-grid-item {
    padding: var(--space-4);
    background-color: rgba(88, 111, 131, 0.4);
    border-radius: var(--border-radius-sm);
    border: 1px solid;
    border-color: rgba(255, 255, 255, 0.2);
  }

  .modal-overlay {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
