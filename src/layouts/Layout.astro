---
import "../styles/base.css";
import "../styles/layout.css";
import Header from "../layouts/Header.astro";
import Footer from "./Footer.astro";
const path = Astro.url.pathname;
const isContact = path.startsWith("/contact");
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>King Kang – Ma relation client dématérialisée</title>
    <meta
      name="description"
      content="Simplifiez votre relation client grâce à King Kang, la solution dématérialisée qui centralise vos échanges et améliore la satisfaction client."
    />

    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" href="/apple-touch-icon.png" />

    <meta name="robots" content="index, follow" />
    <link rel="canonical" href="https://www.kingkang.fr/" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="King Kang" />
    <meta
      property="og:title"
      content="King Kang – Ma relation client dématérialisée"
    />
    <meta
      property="og:description"
      content="Simplifiez votre relation client grâce à King Kang, la solution dématérialisée qui centralise vos échanges et améliore la satisfaction client."
    />
    <meta property="og:url" content="https://www.kingkang.fr/" />
    <meta property="og:image" content="https://www.kingkang.fr/og-image.jpg" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta
      name="twitter:title"
      content="King Kang – Ma relation client dématérialisée"
    />
    <meta
      name="twitter:description"
      content="Simplifiez votre relation client grâce à King Kang, la solution dématérialisée qui centralise vos échanges et améliore la satisfaction client."
    />
    <meta name="twitter:image" content="https://www.kingkang.fr/og-image.jpg" />

    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#ffffff" />
  </head>
  <body class=`${isContact && "contact-body"}`>
    <Header />
    <div class="container">
      <slot />
    </div>
    <Footer />
  </body>
</html>
